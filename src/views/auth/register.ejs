<%- include('./../partials/header') %>
    
<div class="row">
    <div class="col-md-6 offset-md-3">
      <article class="nuevas" id="peliculas">
          <div class="peliculas">
    
                <h2>Unirme a Digital Movies</h2>
                <form method="post" action="/register" enctype="multipart/form-data">
                    <div class="form-group">
                      <label for="email">Email</label>
                      <input type="text" class="form-control " id="email" name="email" value="<%= helper.showValue(data, 'email') %>">
                        <%= helper.showError(errors, 'email') %>
                    </div>
                    <div class="form-group">
                      <label for="rating">Name</label>
                      <input type="text" class="form-control " id="name" name="name" value="<%= helper.showValue(data, 'name') %>">
                      <%= helper.showError(errors, 'name') %>                      
                    </div>
                    <div class="form-group">
                      <label for="awards">Password</label>
                      <input type="text" class="form-control" id="password" name="password"  value="">
                      <%= helper.showError(errors, 'password') %>                
                    </div>
                    <div class="form-group">
                      <label for="c-pass">Confirm Password</label>
                      <input type="text" class="form-control" id="c-pass" name="c_pass"  value="">           
                    </div>
       
                    <div class="form-group">
                      <label for="avatar">Avatar</label>
                      <input type="file" id="avatar" name="avatar">
                      <%= helper.showError(errors, 'avatar') %>                
                    </div>
                    
                    <a class="btn btn-secondary" href="/">Volver</a>
                    <button type="submit" class="btn btn-primary">Unirme</button>
                  </form>
    
          </div>
    
      </article>
    </div>
    </div>

<%- include('./../partials/footer') %>