<%- include('./../partials/header') %>
    


<div class="row">
    <div class="col-md-6 offset-md-3">
      <article class="nuevas" id="peliculas">
          <div class="peliculas">
    
                <h2>Alta de Pelicula</h2>
                <form method="post" action="/movies/new" enctype="multipart/form-data">
                    <div class="form-group">
                      <label for="title">Titulo</label>
                      <input type="text" class="form-control " id="title" name="title" value="<%= helper.showValue(data, 'title') %>">
                        <%= helper.showError(errors, 'title') %>
                    </div>
                    <div class="form-group">
                      <label for="rating">Rating</label>
                      <input type="text" class="form-control " id="rating" name="rating" value="<%= helper.showValue(data, 'rating') %>">
                      <%= helper.showError(errors, 'rating') %>                      
                    </div>
                    <div class="form-group">
                      <label for="awards">Premios</label>
                      <input type="text" class="form-control" id="awards" name="awards"  value="<%= helper.showValue(data, 'awards') %>">
                      <%= helper.showError(errors, 'awards') %>                
                    </div>
                    <div class="form-group">
                      <label for="length">Duraci√≥n</label>
                      <input type="text" class="form-control" id="length" name="length"  value="<%= helper.showValue(data, 'length') %>">
                      <%= helper.showError(errors, 'awards') %>                
                    </div>
    
                    <div class="form-group">
                      <label for="release_date">Fecha de Lanzamiento</label>
                      <input type="date" class="form-control" id="release_date" name="release_date"  value="<%= helper.showValue(data, 'release_date') %>">
                      <%= helper.showError(errors, 'release_date') %>                
                    </div>
    
                    <div class="form-group">
                      <label for="genre_id">Genero</label>
                      <select class="form-control" name="genre_id" id="genre_id">
                        <option value="">Elije uno</option>
                    <% for(genre of genres) { %>
                        <option value="<%= genre.id %>" ><%= genre.name %></option>
                    <% } %>
                      </select>
                      <%= helper.showError(errors, 'genre_id') %>                
                    </div>
    
                    <div class="form-group">
                      <label for="poster">Poster</label>
                      <input type="file" id="poster" name="poster">
                      <%= helper.showError(errors, 'poster') %>                
                    </div>
                    
                    <a class="btn btn-secondary" href="/movies/">Volver</a>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                  </form>
    
          </div>
    
      </article>
    </div>
    </div>

<%- include('./../partials/footer') %>